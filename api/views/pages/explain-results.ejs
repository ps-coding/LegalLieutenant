<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/explain-results.css" />
    <script src="/js/explain-results.js" defer></script>
</head>

<body>
  <header><%- include('../partials/navbar'); %></header>
  <main>
    <button id="tgl" onclick="toggleSections()">Toggle View</button>
    <section>
      <h1>Summary View</h1>
      <h2>Hover to see a one-sentence summary of each section.</h2>
      <% sections.forEach(function(section) { %>
        <div data-content="<%= section.content %>" data-summary="<%= section.summary %>"
          onmouseenter="showSummary(event)" onmouseout="hideSummary(event)">
          <%= section.content %>
        </div>
        <% }); %>
    </section>
    <section class="hidden">
      <h1>Raw Document View</h1>
      <h2>Highlight any word to see its definition.</h2>
      <p data-content="<%= documentContent %>">
        <%= documentContent %>
      </p>
    </section>
  </main>
</body>
