<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {title: "Explain Results"}); %>
    <link rel="stylesheet" href="/css/explain-results.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
    <script src="/js/explain-results.js" defer></script>
</head>

<body>
  <header><%- include('../partials/navbar'); %></header>
  <main>
    <h1 id="title" data-formname="<%= formName %>"><%= formName %></h1>
    <br />
    <button class="btn" onclick="saveDocument()">Save Online</button>
    <button class="btn" onclick="download()">Download Locally</button>
    <br />
    <br />
    <button class="btn" onclick="toggleSections()">Toggle View</button>
    <br />
    <br />
    <section>
      <h2>Summary View</h2>
      <h3>Hover or tap to see a one-sentence summary of each section.</h3>
      <% sections.forEach(function(section) { %>
        <div class="cs" data-content="<%= section.content %>" data-summary="<%= section.summary %>"
          onmouseenter="showSummary(event)" onmouseout="hideSummary(event)">
          <%= section.content %>
        </div>
        <% }); %>
    </section>
    <section class="hidden">
      <h2>Raw Document View</h2>
      <h3>Highlight any word to see its definition.</h3>
      <p id="content" data-content="<%= documentContent %>">
        <%= documentContent %>
      </p>
    </section>
  </main>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
</body>

</html>
